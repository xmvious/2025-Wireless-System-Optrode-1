# -*- coding: utf-8 -*-
"""
PyQt5 + PyQtGraph ê¸°ë°˜ 4ì±„ë„ ì‹¤ì‹œê°„ í”Œë¡œí„° (Binary Frame + CSV í˜¸í™˜)
- ê¸°ë³¸ ì…ë ¥: ë°”ì´ë„ˆë¦¬ í”„ë ˆì„
  header: 0xC3 0xA5 | seq(LE16) | payload_len(LE16) | ch_mask(u8) | flags(u8)
  payload: int16 LE Ã— N (ì¸í„°ë¦¬ë¸Œ: ch0,ch1,.. ë°˜ë³µ)
- í•˜ìœ„í˜¸í™˜: "v1,v2,v3,v4\n" ë˜ëŠ” "seq,v1,v2,v3,v4\n" ë¬¸ìì—´ë„ íŒŒì‹±
- Start: 'on\n' ì „ì†¡ + CSV ë¡œê¹… ì‹œì‘ (CSV í—¤ë”: SEQ,CH1..CH4)
- Stop : 'off\n' ì „ì†¡ + CSV ë¡œê¹… ì¢…ë£Œ
- Stim : "pulses,period,duty\n" ì „ì†¡
- CH1~CH4 ê°€ì‹œì„± í† ê¸€, Merge/Split ì§€ì›, ì½˜ì†” ì‹¤ì‹œê°„ ì¶œë ¥
- íŒ¨í‚· ëˆ„ë½(lost) ë° ê°„ê²© ê¸°ë°˜ ê°­(gap) ê°ì§€/í‘œì‹œ
- ìƒíƒœë°”ì— rx fps, ì´ sps, per-ch sps, target(16k) ë‹¬ì„±ë¥ 
- Refresh ë²„íŠ¼ ì¶”ê°€, ìë™ ì¬ì—°ê²° íƒ€ì´ë¨¸, ê²¬ê³ í•œ try_open_serial

[ì—…ë°ì´íŠ¸: ì†ë„ ìµœì í™”]
- í”„ë ˆì„ ë‚´ ìƒ˜í”Œì„ numpyë¡œ í•œ ë²ˆì— ì²˜ë¦¬(handle_block) â†’ per-sample ì˜¤ë²„í—¤ë“œ ì œê±°
- ê·¸ë˜í”„ setDataì— numpy ë°°ì—´ ì§ì ‘ ì „ë‹¬
- CSVë¥¼ ë¸”ë¡ìœ¼ë¡œ writerows() (ì£¼ê¸°ì  flush)
"""

import sys
import os
import csv
import struct
import threading
from threading import Lock
from collections import deque
from datetime import datetime

import serial
from serial.tools import list_ports

import numpy as np  # â˜… ì¶”ê°€: ë²¡í„° ì²˜ë¦¬
import pyqtgraph as pg
from PyQt5 import QtWidgets, QtCore

# ===== ì„¤ì • =====
PORT = "COM3"              # ì´ˆê¸° ì„ íƒìš© ê¸°ë³¸ í¬íŠ¸(ì—†ì–´ë„ OK)
BAUDRATE = 1000000         # ê¶Œì¥: 1_000_000 ì´ìƒ (ë³´ë“œ/ë“œë¼ì´ë²„ ê°€ëŠ¥ ì‹œ)
MAX_POINTS = 500
UPDATE_INTERVAL_MS = 100
RECONNECT_INTERVAL_MS = 1000  # ìë™ ì¬ì—°ê²° ì²´í¬ ì£¼ê¸°
Y_MIN, Y_MAX = 0, 4095     # 12-bit ì›ë³¸ ë²”ìœ„
CHANNEL_COLORS = ['r', 'g', 'b', 'y']

SAMPLES_PER_PACKET = 4       # ì´ˆê¸° í†µê³„ìš© ê¸°ë³¸ê°’(ë™ì ìœ¼ë¡œ self.last_sppë¡œ ëŒ€ì²´ë¨)
TARGET_TOTAL_SPS = 16000
PRINT_TO_CONSOLE = False

# ===== Binary Frame ì •ì˜ =====
FRAME_MAGIC = 0xA5C3
FRAME_HDR_FMT = "<HHHBB"     # magic, seq, payload_len, ch_mask, flags (little-endian)
FRAME_HDR_SIZE = struct.calcsize(FRAME_HDR_FMT)
FLAG_ASCII_PAYLOAD = 0x01

# ===== CSV í˜¸í™˜ ì—¬ë¶€ ìë™ ê°ì§€ =====
PREFER_BINARY = True         # Trueë©´ ë¨¼ì € ë°”ì´ë„ˆë¦¬ ì‹œë„, ì•ˆ ë§ìœ¼ë©´ CSV ì¤„ë„ ë³‘í–‰ íŒŒì‹±


class MainWindow(QtWidgets.QMainWindow):
    def __init__(self):
        super().__init__()
        self.setWindowTitle("Live ADC Data (4CH) - Binary Frame + CSV compatible")

        # ìƒíƒœ ë³€ìˆ˜
        self.data_queues = [deque([0]*MAX_POINTS, maxlen=MAX_POINTS) for _ in range(4)]
        self.channel_visible = [True, True, True, True]
        self.logging_enabled = False
        self.streaming_enabled = False
        self.csv_file = None
        self.csv_writer = None
        self.csv_flush_timer = None  # â˜… ì¶”ê°€
        self.last_csv_filename = None
        self.ser = None
        self.reader_thread = None
        self.reader_stop = threading.Event()
        self.merged = False

        # í†µê³„/ê°ì‹œ (ëˆ„ì )
        self.total_packets = 0          # ìˆ˜ì‹ í•œ í”„ë ˆì„ ìˆ˜
        self.lost_packets = 0
        self.malformed_lines = 0
        self.gap_count = 0
        self.last_seq = None
        self.last_time = None
        self.dt_history = deque(maxlen=200)

        # ë ˆì´íŠ¸ ê³„ì‚°(ìŠ¤ë ˆë“œ-ì„¸ì´í”„)
        self.pkts_since_last = 0
        self.frames_since_last = 0
        self.rate_lock = Lock()
        self.prev_stats_time = QtCore.QTime.currentTime()

        # â˜… ì´ˆë‹¹ í†µê³„ë¥¼ ìœ„í•œ â€œìµœê·¼ 1ì´ˆ ì¦ê°€ë¶„â€ ì¹´ìš´í„°
        self.loss_since_last = 0
        self.malformed_since_last = 0
        self.gaps_since_last = 0

        # ë™ì  samples-per-packet (í”„ë ˆì„ ì „ì²´ int16 ê°œìˆ˜)
        self.last_spp = SAMPLES_PER_PACKET

        # ë§ˆì§€ë§‰ ìˆ˜ì‹  ì‹œê° (ìë™ ì¬ì—°ê²° íŒë‹¨ìš©)
        self.last_rx_time = QtCore.QTime.currentTime()

        # ========== UI ==========
        central = QtWidgets.QWidget()
        self.setCentralWidget(central)
        vbox = QtWidgets.QVBoxLayout(central)

